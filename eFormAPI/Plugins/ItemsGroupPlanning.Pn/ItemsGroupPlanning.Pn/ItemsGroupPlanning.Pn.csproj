      <PackageReference Include="Microting.eFormApi.BasePn" Version="3.0.28" />
      <PackageReference Include="McMaster.NETCore.Plugins" Version="1.4.0" />
      <PackageReference Include="Microting.ItemsGroupPlanningBase" Version="3.0.21" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\Templates\report_template.xlsx" />
      <EmbeddedResource Include="Resources\Templates\report_template_lists.xlsx" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\localization.json" />
    </ItemGroup>

</Project>
